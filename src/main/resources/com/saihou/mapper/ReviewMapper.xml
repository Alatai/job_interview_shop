<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saihou.mapper.ReviewMapper">

    <resultMap id="BaseResultMap" type="com.saihou.entity.Review">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="uid" property="uid"/>
        <result column="pid" property="pid"/>
        <result column="createdDate" property="createdDate"/>

        <!-- user -->
        <association property="user" column="uid" javaType="com.saihou.entity.User" select="com.saihou.mapper.UserMapper.findById">
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , content, uid, pid, createdDate
    </sql>

    <!-- findByPid -->
    <select id="findByPid" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from Review
        where pid = #{pid}
    </select>


    <!-- findById -->
    <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from Review
        where id = #{id}
    </select>

    <!-- insert -->
    <insert id="insert" parameterType="com.saihou.entity.Review" useGeneratedKeys="true" keyProperty="id">
        insert into Review (id, content, uid,
                            pid, createdDate)
        values (#{id}, #{content}, #{uid},
                #{pid}, #{createdDate})
    </insert>

    <!-- update -->
    <update id="update" parameterType="com.saihou.entity.Review">
        update Review
        set content     = #{content},
            uid         = #{uid},
            pid         = #{pid},
            createdDate = #{createdDate}
        where id = #{id}
    </update>

    <!-- delete -->
    <delete id="delete" parameterType="java.lang.Integer">
        delete
        from Review
        where id = #{id}
    </delete>

</mapper>